<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/configureAPIKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="apiKey"
        android:inputType="text|textNoSuggestions" />

    <EditText
        android:id="@+id/configureMessagingSenderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/configureAPIKey"
        android:layout_below="@+id/configureAPIKey"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="messagingSenderId"
        android:inputType="text|textNoSuggestions" />

    <EditText
        android:id="@+id/configureDatabaseURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/configureMessagingSenderID"
        android:layout_below="@+id/configureMessagingSenderID"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="databaseURL"
        android:inputType="text|textNoSuggestions" />

    <RelativeLayout
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_below="@id/configureDatabaseURL"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_alignParentStart="true"
            android:id="@+id/configureRivisto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configure" />

        <Button
            android:layout_alignParentEnd="true"
            android:id="@+id/easyConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy Connect" />

    </RelativeLayout>

</RelativeLayout>