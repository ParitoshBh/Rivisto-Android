<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/automaticConfigure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130sp"
        android:background="@drawable/configure_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="@string/configure_automatic"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/managedAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/automaticConfigure"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:background="@drawable/configure_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="@string/configure_managed_account"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent" />

</RelativeLayout>