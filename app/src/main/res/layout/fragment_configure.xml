<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/configureAPIKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="apiKey"
        android:inputType="text|textNoSuggestions" />

    <EditText
        android:id="@+id/configureMessagingSenderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/configureAPIKey"
        android:layout_below="@+id/configureAPIKey"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="messagingSenderId"
        android:inputType="text|textNoSuggestions" />

    <EditText
        android:id="@+id/configureDatabaseURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/configureMessagingSenderID"
        android:layout_below="@+id/configureMessagingSenderID"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="databaseURL"
        android:inputType="text|textNoSuggestions" />

    <RelativeLayout
        android:id="@+id/relativeLayoutConfigureConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/configureDatabaseURL"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/configureRivisto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Configure" />

        <Button
            android:id="@+id/easyConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Easy Connect" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayoutConfigureConnect"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/createAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account" />

    </LinearLayout>

</RelativeLayout>