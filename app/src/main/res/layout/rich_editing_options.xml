<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/openNoteTitle"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/action_bold"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_format_bold_black_18dp" />

        <ImageButton
            android:id="@+id/action_italic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_format_italic_black_18dp" />

        <ImageButton
            android:id="@+id/action_underline"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_format_underlined_black_18dp" />

        <ImageButton
            android:id="@+id/action_strikethrough"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_strikethrough_s_black_18dp" />

        <ImageButton
            android:id="@+id/action_align_left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_format_align_left_black_18dp" />

        <ImageButton
            android:id="@+id/action_align_center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_format_align_center_black_18dp" />

        <ImageButton
            android:id="@+id/action_align_right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_format_align_right_black_18dp" />

        <ImageButton
            android:id="@+id/action_insert_bullets"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_format_list_bulleted_black_18dp" />

        <ImageButton
            android:id="@+id/action_insert_numbers"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_format_list_numbered_black_18dp" />

    </LinearLayout>

</HorizontalScrollView>