<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="productivity.notes.rivisto.NotesFragment">

    <ImageView
        android:visibility="gone"
        android:contentDescription="@string/fragment_note_imagePlaceholder"
        android:layout_centerInParent="true"
        android:id="@+id/imagePlaceholderEmptyNotes"
        android:background="@drawable/placeholder_empty_all_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="2sp"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
